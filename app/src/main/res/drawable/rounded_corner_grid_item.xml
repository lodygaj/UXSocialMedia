<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid

        android:color="#ffffff"
        >
    </solid>

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#ffffff">
    </stroke>

    <!-- Padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"    >
    </padding>

    <!--Corner radius -->
    <corners
        android:radius="7dp"   >
    </corners>

</shape>