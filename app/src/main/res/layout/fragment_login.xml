<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <TextView
        android:text="@string/txt_login_prompt"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:id="@+id/txtLoginPrompt"
        android:layout_weight="25"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Thrifty Account Login"
        android:id="@+id/btnLogin"
        android:layout_weight="15"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Create Thrifty Account"
        android:id="@+id/btnRegister"
        android:layout_weight="15"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/imgBtnFacebook"
        android:layout_weight="15"
        android:src="@drawable/facebook_login"
        android:scaleType="fitXY"
        android:padding="3dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/imgBtnTwitter"
        android:layout_weight="15"
        android:src="@drawable/twitter_login"
        android:scaleType="fitXY"
        android:padding="3dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Continue As Guest"
        android:id="@+id/btnGuest"
        android:layout_weight="15"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

</LinearLayout>