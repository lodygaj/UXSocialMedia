<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <TextView
        android:text="Welcome to Thrifty!"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/txtWelcomeToThrifty"
        android:layout_gravity="center"
        android:layout_weight="5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/two"
        android:id="@+id/imgWelcomeThriftyLogo"
        android:layout_gravity="center_horizontal"
        android:layout_weight="55"/>

    <TextView
        android:text="@string/txt_take_survey"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/txtTakeSurvey"
        android:layout_weight="10"/>

    <Button
        android:text="Begin Survey"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btnBeginSurvey"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_weight="15"/>

    <Button
        android:text="Skip Survey"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btnSkipSurvey"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_weight="15"/>

</LinearLayout>